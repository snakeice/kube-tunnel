# Kube-tunnel configuration example file
# Copy this file to .env or configure the variables in your environment

# === PERFORMANCE SETTINGS ===
# HTTP client/server performance settings
KTUN_SKIP_HEALTH=false
KTUN_FORCE_HTTP2=true
KTUN_DISABLE_FALLBACK=false
KTUN_MAX_IDLE=200
KTUN_MAX_IDLE_HOST=50
KTUN_MAX_CONNS_HOST=100
KTUN_READ_TIMEOUT=30s
KTUN_WRITE_TIMEOUT=30s
KTUN_IDLE_TIMEOUT=120s
KTUN_MAX_STREAMS=1000
KTUN_MAX_FRAME=524288
KTUN_MAX_UPLOAD_CONN=1048576
KTUN_MAX_UPLOAD_STREAM=1048576
KTUN_GRPC_TIMEOUT=30S

# === HEALTH MONITOR SETTINGS ===
# Service health monitor settings
KTUN_HEALTH_ENABLED=true
KTUN_HEALTH_INTERVAL=30s
KTUN_HEALTH_TIMEOUT=2s
KTUN_HEALTH_MAX_FAIL=3

# === NETWORK SETTINGS ===
# Network and DNS settings
KTUN_DNS_IP=127.0.0.1
KTUN_FORWARD_IP=127.0.0.1
KTUN_USE_VIRTUAL=false
KTUN_VIRTUAL_NAME=kube-dummy0
KTUN_VIRTUAL_IP=127.0.0.10
KTUN_IP_RANGES=127.0.0.0/24,127.1.0.0/16

# === PROXY RETRY SETTINGS ===
# Proxy retry settings
KTUN_RETRY_MAX=2
KTUN_RETRY_DELAY=100ms

# === ENVIRONMENT-SPECIFIC CONFIGURATIONS ===

# For development (low performance, high debug)
# KTUN_MAX_IDLE=10
# KTUN_HEALTH_INTERVAL=10s
# KTUN_RETRY_MAX=1

# For production (high performance, aggressive retry)
# KTUN_MAX_IDLE=500
# KTUN_MAX_CONNS_HOST=200
# KTUN_RETRY_MAX=5
# KTUN_RETRY_DELAY=50ms

# For resource-constrained environments
# KTUN_MAX_STREAMS=100
# KTUN_MAX_UPLOAD_CONN=262144
# KTUN_MAX_UPLOAD_STREAM=262144
